# QRent Scraper Environment Variables Configuration
# Copy this file to .env and fill in actual values

# ===========================================
# Database Configuration
# ===========================================
# For remote database connection (recommended)
DB_HOST=your_database_host          # Database host address
DB_USER=property_user               # Database username
DB_PASSWORD=your_secure_password    # Database password
DB_DATABASE=qrent                   # Database name
DB_PORT=3306                        # Database port

# For local database container (optional)
DB_ROOT_PASSWORD=your_root_password

# ===========================================
# API Keys Configuration
# ===========================================
# REA Partner Platform API (Required for REA scraper)
REA_CLIENT_ID=your_rea_client_id
REA_CLIENT_SECRET=your_rea_client_secret

# Google Maps API (Required)
# Used for calculating commute time from properties to universities
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Alibaba Cloud DashScope API (Required)
# Used for AI-powered property scoring and keyword extraction
PROPERTY_RATING_API_KEY=your_dashscope_api_key

# ===========================================
# Optional Configuration
# ===========================================
# Timezone setting
TZ=Australia/Sydney

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Chrome configuration
CHROME_HEADLESS=true
CHROME_NO_SANDBOX=true

# Auto-delete delisted properties
AUTO_DELETE_DELISTED=false
